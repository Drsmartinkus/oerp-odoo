<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.form.sale.name.unique</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <setting id="order_warnings" position="after">
                <setting
                    id="sale_name_unique"
                    string="Unique Sale Order Number"
                    help="Make sale order number unique per company."
                >
                    <field name="sale_name_unique"/>
                </setting>
            </setting>
        </field>
    </record>
</odoo>
