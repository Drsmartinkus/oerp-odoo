<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<!-- Adapt account.email_template_edi_invoice template -->
<template
    id="mail_body_invoice_send"
    name="Invoice: Send by email"
>
    <t t-call="base_templates.mail_body_layout_basic">
        <t t-call="base_templates.msg_partner_refer">
            <t t-set="partner" t-value="record.partner_id"/>
        </t>
        <t t-call="base_templates.msg_doc_description_with_amount">
            <t t-set="doc_text">
                <span name="span_doc_text">Here is your invoice</span>
            </t>
            <t t-set="doc_number" t-value="record.number"/>
            <t t-set="origin" t-value="record.origin"/>
            <t
                t-set="amount"
                t-value="format_amount(record.amount_total, record.currency_id)"
            />
            <t t-set="extra_description_el">
                <span
                    name="span_paid_text"
                    t-if="record.state == 'paid'"
                >
                    This invoice is already paid.
                </span>
                <span name="span_not_paid_text" t-else="">
                    Please remit payment at your earliest convenience.
                </span>
            </t>
        </t>
        <t t-call="base_templates.msg_end_text">
            <t t-set="company_name" t-value="record.company_id.name"/>
        </t>
    </t>
</template>
</odoo>
