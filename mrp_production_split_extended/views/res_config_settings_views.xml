<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.form.mrp.split.mode</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="mrp_lock" position="after">
                <div class="col-lg-6 col-12 o_setting_box" id="mrp_production_split_extended">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <div>
                            Force default split mode rather than using original
                            logic to determine default split mode.
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="mrp_production_default_split_mode" class="o_light_label" widget="radio"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
