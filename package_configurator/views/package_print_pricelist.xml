<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="package_print_pricelist_view_tree" model="ir.ui.view">
        <field name="name">package.print.pricelist.tree</field>
        <field name="model">package.print.pricelist</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="package_print_pricelist_view_form" model="ir.ui.view">
        <field name="name">package.print.pricelist.form</field>
        <field name="model">package.print.pricelist</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="main">
                        <group name="left">
                            <field name="name"/>
                        </group>
                        <group name="right">
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="rules" string="Rules">
                            <field name="rule_ids">
                                <tree editable="bottom">
                                    <field name="color_id"/>
                                    <field name="min_qty"/>
                                    <field name="unit_cost"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="package_print_pricelist_action" model="ir.actions.act_window">
        <field name="name">Pricelists</field>
        <field name="res_model">package.print.pricelist</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
