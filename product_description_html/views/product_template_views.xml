<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.description</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <group name="description" position="after">
                <group string="Sales Rich Description" name="description_rich_sale">
                    <field
                        name="description_rich_sale"
                        nolabel="1"
                        widget="html"
                        class="oe-bordered-editor"
                        options="{'style-inline': true, 'codeview': true }"
                    />
                </group>
            </group>
        </field>
    </record>
</odoo>
