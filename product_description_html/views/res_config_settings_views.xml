<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.rich.description</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="base_setup.res_config_settings_view_form"
        />
        <field name="arch" type="xml">
            <div id="companies_setting" position="after">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    name="product_rich_description"
                >
                    <div class="o_setting_left_pane">
                        <field
                            name="group_product_rich_description_use_advanced"
                        />
                    </div>
                    <div class="o_setting_right_pane">
                        <label
                            for="group_product_rich_description_use_advanced"
                        />
                        <div class="text-muted">
                            Product Rich Description will be showed in raw HTML.
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
