<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_purchase" model="ir.ui.view">
        <field name="name">res.config.settings.form.purchase.grouping</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <block name="purchase_setting_container" position="inside">
                <setting
                    id="purchase_grouping"
                    company_dependent="1"
                    help="Choose how to group purchase orders via vendor"
                >
                    <field name="purchase_grouping"/>
                    <div
                        class="text-muted"
                        invisible="purchase_grouping != 'root_procure_group'"
                    >
                        Make sure <strong
                        >Buy</strong> rule (e.g. WH: Stock (Buy)) has <strong
                        >Propagation of Procurement Group</strong> option set as <strong
                        >Propagate</strong>!
                    </div>
                </setting>
            </block>
        </field>
    </record>
</odoo>
